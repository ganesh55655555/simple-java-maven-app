pipeline{
    agent  any
    environment{
        PATH = "/opt/maven/bin:$PATH"
        
    }
    stages{
        stage('build'){
            steps{
                sh "mvn clean install"
            }
        }
        stage('soanar qube'){
            environment{
                scannerhome = tool  'sonarqube-scanner'
            }
            steps{
                withsonarqubeEnv('sonarqube-server'){
                    sh "${scannerhome}/bin/sonar-scanner"
                }
            }
        }
    }
}
    

